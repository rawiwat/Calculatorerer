<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/equation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="0"
        android:textColor="@color/teal_200"
        android:background="@color/black"
        android:textSize="50sp"
        android:textAlignment="viewEnd"
        android:layout_marginBottom="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/button1"
        android:layout_margin="10dp"
        android:width="90dp"
        android:height="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/teal_200"
        android:gravity="center"
        android:textSize="50sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/equation"
        />
    <Button
        android:id="@+id/button2"
        android:layout_margin="10dp"
        android:width="90dp"
        android:height="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textColor="@color/teal_200"
        android:gravity="center"
        android:textSize="50sp"
        app:layout_constraintTop_toBottomOf="@id/equation"
        app:layout_constraintLeft_toRightOf="@id/button1"
        />
    <Button
        android:id="@+id/button3"
        android:layout_margin="10dp"
        android:width="90dp"
        android:height="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textColor="@color/teal_200"
        android:gravity="center"
        android:textSize="50sp"
        app:layout_constraintTop_toBottomOf="@id/equation"
        app:layout_constraintLeft_toRightOf="@id/button2"
        />
    <Button
        android:id="@+id/buttonPlus"
        android:layout_margin="10dp"
        android:width="90dp"
        android:height="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textColor="@color/teal_200"
        android:gravity="center"
        android:textSize="50sp"
        app:layout_constraintLeft_toRightOf="@id/button3"
        app:layout_constraintTop_toBottomOf="@id/equation"

        />
    <Button
        android:id="@+id/button4"
        android:layout_margin="10dp"
        android:width="90dp"
        android:height="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textColor="@color/teal_200"
        android:gravity="center"
        android:textSize="50sp"
        app:layout_constraintTop_toBottomOf="@id/button1"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:id="@+id/button5"
        android:layout_margin="10dp"
        android:width="90dp"
        android:height="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textColor="@color/teal_200"
        android:gravity="center"
        android:textSize="50sp"
        app:layout_constraintTop_toBottomOf="@id/button2"
        app:layout_constraintLeft_toRightOf="@id/button4"
        />
    <Button
        android:id="@+id/button6"
        android:layout_margin="10dp"
        android:width="90dp"
        android:height="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:textColor="@color/teal_200"
        android:gravity="center"
        android:textSize="50sp"
        app:layout_constraintTop_toBottomOf="@id/button3"
        app:layout_constraintLeft_toRightOf="@id/button5"
        />
    <Button
        android:id="@+id/buttonMinus"
        android:layout_margin="10dp"
        android:width="90dp"
        android:height="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textColor="@color/teal_200"
        android:gravity="center"
        android:textSize="50sp"
        app:layout_constraintTop_toBottomOf="@id/buttonPlus"
        app:layout_constraintLeft_toRightOf="@id/button6"
        />
    <Button
        android:id="@+id/button7"
        android:layout_margin="10dp"
        android:width="90dp"
        android:height="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:textColor="@color/teal_200"
        android:gravity="center"
        android:textSize="50sp"
        app:layout_constraintTop_toBottomOf="@id/button4"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:id="@+id/button8"
        android:layout_margin="10dp"
        android:width="90dp"
        android:height="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:textColor="@color/teal_200"
        android:gravity="center"
        android:textSize="50sp"
        app:layout_constraintTop_toBottomOf="@id/button5"
        app:layout_constraintLeft_toRightOf="@id/button7"
        />
    <Button
        android:id="@+id/button9"
        android:layout_margin="10dp"
        android:width="90dp"
        android:height="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textColor="@color/teal_200"
        android:gravity="center"
        android:textSize="50sp"
        app:layout_constraintTop_toBottomOf="@id/button6"
        app:layout_constraintLeft_toRightOf="@id/button8"
        />
    <Button
        android:id="@+id/buttonMultiply"
        android:layout_margin="10dp"
        android:width="90dp"
        android:height="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ร"
        android:textColor="@color/teal_200"
        android:gravity="center"
        android:textSize="50sp"
        app:layout_constraintTop_toBottomOf="@id/buttonMinus"
        app:layout_constraintLeft_toRightOf="@id/button9"
        />
    <Button
        android:id="@+id/buttonErase"
        android:layout_margin="10dp"
        android:width="90dp"
        android:height="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="c"
        android:textColor="@color/teal_200"
        android:gravity="center"
        android:textSize="50sp"
        app:layout_constraintTop_toBottomOf="@id/button7"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:id="@+id/button0"
        android:layout_margin="10dp"
        android:width="90dp"
        android:height="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/teal_200"
        android:gravity="center"
        android:textSize="50sp"
        app:layout_constraintTop_toBottomOf="@id/button8"
        app:layout_constraintLeft_toRightOf="@id/buttonErase"
        />
    <Button
        android:id="@+id/buttonEqual"
        android:layout_margin="10dp"
        android:width="90dp"
        android:height="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:textColor="@color/teal_200"
        android:gravity="center"
        android:textSize="50sp"
        app:layout_constraintTop_toBottomOf="@id/button9"
        app:layout_constraintLeft_toRightOf="@id/button0"
        />
    <Button
        android:id="@+id/buttonDivide"
        android:layout_margin="10dp"
        android:width="90dp"
        android:height="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="รท"
        android:textColor="@color/teal_200"
        android:gravity="center"
        android:textSize="50sp"
        app:layout_constraintTop_toBottomOf="@id/buttonMultiply"
        app:layout_constraintLeft_toRightOf="@id/buttonEqual"
        />


</androidx.constraintlayout.widget.ConstraintLayout>